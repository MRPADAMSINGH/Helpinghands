{
    "version": 2,
    "builds": [
        {
            "src": "django_website/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxi.ambdaSize": "15mb", "runtime": "python3.9" }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static",
            "config": {
                "distDir": "static"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static"
        },
        {
            "src": "/(.*)",
            "dest": "django_website/wsgi.py"
        }
    ]
}
